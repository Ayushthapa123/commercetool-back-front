meta {
  name: Get Next Order Number
  type: http
  seq: 5
}

post {
  url: {{host_url}}/orders/number
  body: none
  auth: inherit
}

script:post-response {
  var data = res.body;
  if(res.status == 200 || res.status == 201) {
      if(data.orderNumber){
          bru.setEnvVar("orderNumber", data.orderNumber);
      }
  }
}

settings {
  encodeUrl: true
}
